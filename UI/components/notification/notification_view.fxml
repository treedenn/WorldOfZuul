<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane stylesheets="@notification.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.components.notification.Notification">
   <children>
      <VBox maxWidth="800.0" spacing="8.0" styleClass="notificationInnerWrapper" StackPane.alignment="CENTER">
         <children>
            <Label styleClass="notificationTitle" text="Spaceship AI says:" />
            <Label fx:id="notificationMessage" styleClass="notificationMessage" text="Lorum ipsum dolor lorum ipsum dolor" wrapText="true" />
         </children>
         <effect>
            <DropShadow offsetY="-2.0" />
         </effect>
      </VBox>
   </children>
</StackPane>
